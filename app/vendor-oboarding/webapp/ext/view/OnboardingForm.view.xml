<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox class="sapUiMediumMarginBegin sapUiLargeMarginTop">
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Name" width="150px"/>
            <Input id="company_name" />
            <Label text="Address" width="150px" class="sapUiMediumMarginBegin"/>
            <Input id="company_address" value="{/address}" />
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Registration Number" width="150px" />
            <Input id="registration_number" />
            <Label text="Company Type" width="150px" class="sapUiMediumMarginBegin"/>
            <ComboBox
                     id="company_type"
                     width="170px"
                     placeholder="Company type"
                     items="{
					      path: 'companyTypes>/companyTypes',
					      sorter: { path: 'text' }
				      }"
                  >
                     <core:Item
                        key="{companyTypes>key}"
                        text="{companyTypes>text}"
                     />
                  </ComboBox>
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Tax Number" width="150px" />
            <Input id="tax_number" />
            <Label text="Contact Person Name" width="150px" class="sapUiMediumMarginBegin"/>
            <Input id="contact_person_name" />
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Contact Person Email" width="150px" />
            <Input id="contact_person_email" />
            <Label text="Industry/Category" width="150px" class="sapUiMediumMarginBegin"/>
            <ComboBox
                     width="170px"
                     id="industry"
                     placeholder="Industry/Category"
                     items="{
					      path: 'industry>/industry',
					      sorter: { path: 'text' }
				      }"
                  >
                     <core:Item
                        key="{industry>key}"
                        text="{industry>text}"
                     />
                  </ComboBox>
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Contact Phone Number" width="150px" />
            <Input id="contact_person_number" />
            <Label text="Bank Name" width="150px" class="sapUiMediumMarginBegin"/>
            <Input id="bank_name" />
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Bank Account Number" width="150px" />
            <Input id="bank_account_number"  />
            <Label text="Business License" width="150px" class="sapUiMediumMarginBegin"/>
            <Input id="license_number" />
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Service Offering" width="150px" />
            <TextArea id="service_offering"  rows="5" />
            <Label text="Service Description" width="150px" class="sapUiMediumMarginBegin"/>
            <TextArea id="service_description" rows="5" />
        </HBox>
        <HBox class="sapUiSmallMarginBottom">
            <Label text="Additional Comments" width="150px" />
            <TextArea id="additional_comments" rows="5" />
            <Label text="Reference" width="150px" class="sapUiMediumMarginBegin"/>
            <Input id="reference" />
        </HBox>
    </VBox>
</mvc:View>
