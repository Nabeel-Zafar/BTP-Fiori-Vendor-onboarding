<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <VBox>
        <HBox>
            <Label text="Name" width="120px" />
            <Input value="{/name}" />
            <Label text="Address" width="120px" />
            <Input value="{/address}" />
        </HBox>
        <HBox>
            <Label text="Registration Number" width="120px" />
            <Input value="{/registrationNumber}" />
            <Label text="Company Type" width="120px" />
            <Select>
                <!-- Populate options dynamically -->
            </Select>
        </HBox>
        <HBox>
            <Label text="Tax Identification Number" width="120px" />
            <Input value="{/taxIdNumber}" />
            <Label text="Contact Person Name" width="120px" />
            <Input value="{/contactPersonName}" />
        </HBox>
        <HBox>
            <Label text="Contact Person Email" width="120px" />
            <Input value="{/contactPersonEmail}" />
            <Label text="Industry/Category" width="120px" />
            <Select>
                <!-- Populate options dynamically -->
            </Select>
        </HBox>
        <HBox>
            <Label text="Contact Phone Number" width="120px" />
            <Input value="{/contactPhoneNumber}" />
            <Label text="Bank Name" width="120px" />
            <Input value="{/bankName}" />
        </HBox>
        <HBox>
            <Label text="Bank Account Number" width="120px" />
            <Input value="{/bankAccountNumber}" />
            <Label text="Business License Number" width="120px" />
            <Input value="{/businessLicenseNumber}" />
        </HBox>
        <HBox>
            <Label text="Product/Service Offering" width="120px" />
            <TextArea value="{/productServiceOffering}" rows="5" />
            <Label text="Product/Service Description" width="120px" />
            <TextArea value="{/productServiceDescription}" rows="5" />
        </HBox>
        <HBox>
            <Label text="Additional Comments" width="120px" />
            <TextArea value="{/additionalComments}" rows="5" />
            <Label text="Reference" width="120px" />
            <Input value="{/reference}" />
        </HBox>
    </VBox>
</mvc:View>
